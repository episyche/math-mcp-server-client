{
  "name": "@shopify/dev-mcp",
  "version": "1.2.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "vite build && node -e \"const fs = require('fs'); const path = require('path'); const file = path.join('dist', 'index.js'); if (fs.existsSync(file)) { fs.chmodSync(file, 0o755); }\"",
    "build:watch": "vite watch",
    "changeset": "changeset",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:fix": "prettier --write --ignore-unknown .",
    "lint": "prettier --check --cache --ignore-unknown .",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector dist/index.js",
    "release": "changeset publish",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "description": "A command line tool for setting up Shopify Dev MCP server",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@shopify/theme-check-common": "^3.20.0",
    "@shopify/theme-check-docs-updater": "^3.20.0",
    "@shopify/theme-check-node": "^3.20.0",
    "env-paths": "^3.0.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@jest/globals": "^29.7.0",
    "@modelcontextprotocol/inspector": "^0.16.1",
    "@types/graphql": "^14.2.3",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.9",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^6.3.5",
    "vitest": "^3.0.9"
  },
  "type": "module",
  "bin": {
    "shopify-dev-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "!dist/**/*.test.*",
    "data/**/*.json.gz",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "shopify"
  ],
  "prettier": {
    "endOfLine": "auto"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  }
}
